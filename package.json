{
  "name": "sass-starter",
  "version": "1.0.0",
  "description": "A starter template for Sass projects",
  "scripts": {
    "sass:watch": "sass --watch src/styles/main.scss src/styles/main.css --style compressed",
    "sass:build": "sass src/styles/main.scss src/styles/main.css --style compressed",
    "serve": "browser-sync start --server --files 'src/**/*.css, src/**/*.html, src/**/*.scss' --startPath /src/index.html",
    "start": "npm-run-all --parallel sass:watch serve"
  },
  "devDependencies": {
    "sass": "^1.71.0",
    "browser-sync": "^2.29.3",
    "npm-run-all": "^4.1.5"
  }
}
